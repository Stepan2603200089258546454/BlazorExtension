@page "/counter"
@rendermode InteractiveAuto

<PageTitle>Счетчик</PageTitle>

<h1>Счетчик</h1>

<p role="status">Текущий счет: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Нажмите на меня</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
